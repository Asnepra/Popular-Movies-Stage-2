<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trailerInformation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/trailer_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:onClick="launchTrailer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/detail_activity_trailer_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cute_girl1" />

            <TextView
                android:id="@+id/detail_activity_trailers_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_activity_trailer_image"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:text="@string/Movie"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="@dimen/text_size_trailer_title" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
